  <script>
    // Tombol Pesan menuju ke formulir pendaftaran
    function gotoDaftar() {
      document.getElementById('daftar').scrollIntoView({behavior: 'smooth'});
    }
    // Submit form dummy handler
    document.getElementById('form-pendaftaran').onsubmit = function(e){
      e.preventDefault();
      document.getElementById('form-msg').innerText = "Terima kasih! Pendaftaran Anda sudah diterima.";
      setTimeout(()=>document.getElementById('form-msg').innerText="",4000);
      this.reset();
    }
  </script>
